.container
  = form_for @activity do |f|
    .form-group
      .col-sm-1
        = f.label :name, "活動名稱"
      .col-sm-3
        = f.text_field :name, class: "form-control"
    .form-group
      .col-sm-1
        = f.label :date, "活動日期"
      .col-sm-1
        = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 1}, class: 'form-control')
      .col-sm-1
        = select_month(Date.today, {use_two_digit_numbers: true}, class: 'form-control')
      .col-sm-1
        = select_day(Date.today, {}, class: 'form-control')
    = f.submit "提交", class: "btn btn-primary"
    = link_to "查看現有活動", activities_path
