.container
  = form_tag sign_in_path do
    .form-group
      .col-sm-2
        = text_field_tag :email, nil, class: "form-control", placeholder: "帳號"
    .form-group
      .col-sm-2
        = password_field_tag :password, nil, class: "form-control", placeholder: "密碼"
    = submit_tag "登入", class: "btn btn-success"
